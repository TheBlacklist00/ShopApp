<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">
    <TextView
        android:id="@+id/admin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bienvenue admin"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="45dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/admin_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vous pouvez gérer les commandes et les produits à partir d'ici"
        android:layout_below="@+id/admin_title"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        />

    <Button
        android:id="@+id/maintain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttons4"
        android:text="Entretenir les produits"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"

        android:layout_below="@+id/admin_explain"

        />
    <Button
        android:id="@+id/check_orders"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttons4"

        android:text="Vérifiez les nouvelles commandes"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/maintain"
        />
    <Button
        android:id="@+id/admin_approve_products"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttons4"

        android:text="Approuver les nouveaux protduits"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/check_orders"
        />

    <Button
        android:id="@+id/admin_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/buttons4"
        android:text="Se déconnecter"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"


        />

</RelativeLayout>