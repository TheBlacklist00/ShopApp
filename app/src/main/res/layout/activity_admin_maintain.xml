<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".Admin.AdminMaintainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/maintain_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/maintain_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_name"
            android:hint="Prix du produit"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:background="@drawable/inputs3"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/maintain_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_price"
            android:hint="DÃ©scription du produit"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:background="@drawable/inputs3"
            android:padding="12dp"
            />
        <EditText
            android:id="@+id/maintain_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_image"
            android:hint="Nom du produit"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:background="@drawable/inputs3"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:id="@+id/maintain_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_description"
            android:text="Appliquer les changements"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons4"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_button"
            android:text="Supprimer ce produit"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons4"
            android:padding="12dp"
            android:layout_margin="30dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>