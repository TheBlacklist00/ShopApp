<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".Buyers.LoginActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"

        android:src="@drawable/logomakr"
        />
    <EditText
        android:id="@+id/login_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="    Nom d'utilisateur"
        android:inputType="text"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_username_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="    Mot de passe"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />

<LinearLayout
    android:id="@+id/linear1_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/login_password_input"
    android:layout_marginTop="8dp"

    >
<com.rey.material.widget.CheckBox
    android:id="@+id/remember_me"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Material.Drawable.CheckBox"
    android:text="Se rappeler de l'utilisateur"
    android:textColor="@color/colorAccent"
    app:cbd_strokeColor="@color/colorPrimaryDark"
    android:gravity="center_vertical"
    android:textSize="16sp"
    android:textStyle="bold"
    android:layout_marginLeft="17dp"
    />
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe oubliÃ© ?"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginLeft="25dp"
        />



</LinearLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Se connecter"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@+id/linear1_layout"
        android:layout_marginTop="15dp"
        />


        <TextView
            android:id="@+id/admin_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utilisateur ?"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="23dp"
            android:layout_below="@+id/login"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/not_admin_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin ?"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="60dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/login"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="8dp"

            />




</RelativeLayout>