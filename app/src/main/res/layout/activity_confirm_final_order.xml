<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ConfirmFinalOrderActivity">
    
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veuillez entrer vos coordonnées afin de confirmer votre commande"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="25dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        />
    <EditText
        android:id="@+id/order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Nom complet"
        android:textColorHint="@android:color/black"
        />
    <EditText
        android:id="@+id/order_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Numéro de téléphone"
        android:inputType="phone"
        android:textColorHint="@android:color/black"
        />
    <EditText
        android:id="@+id/order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_city"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Adresse de domicile"
        android:textColorHint="@android:color/black"
        />
    <EditText
        android:id="@+id/order_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_phone"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Nom de la ville"
        android:textColorHint="@android:color/black"
        />
    <Button
        android:id="@+id/confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmer la commande"
        android:background="@drawable/buttons"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:textColor="@android:color/white"
        />

</RelativeLayout>